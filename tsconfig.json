{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["test", "node_modules"]
}
